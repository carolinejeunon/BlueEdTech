let contador = 0 

function somaAcoes(x){
  return x+=1
}


class Pessoa{
    constructor(atividade){
      this.atividade = atividade
      this.contador = 0
    }
  
    Acordar (malhar){
      if (malhar == 1){
        this.humor = this.humor + 10
      } else if (malhar == 2){
        this.humor = this.humor - 20
        contador = somaAcoes(contador)
        if (this.humor<0){
            console.log("Demoramos " + contador + " aÃ§Ãµes para acabar com a paciÃªncia do jogador")
        }
      }
      console.log(`Humor: ${this.humor}`)
      
    }

    Trabalhar (cliente){
        if (cliente == 1){
        this.humor = this.humor - 50
        contador = somaAcoes(contador)
        if (this.humor<0){
            console.log("Demoramos " + contador + " aÃ§Ãµes para acabar com a paciÃªncia do jogador")
        }
      }
      console.log(`Humor: ${this.humor}`)
    }
  
    Aula (aula){
      if (aula == "18"){
        this.humor = this.humor - 25
        contador = somaAcoes(contador)
      } else if (aula == 19){
          this.humor = this.humor - 10
          contador = somaAcoes(contador)
      }
      console.log(`Humor: ${this.humor}`)
      if (this.humor<0){
        console.log("Demoramos " + contador + " aÃ§Ãµes para acabar com a paciÃªncia do jogador")
    }
    }
  
    VoltaCasa (transito){
      if (transito == 1){
        this.humor = this.humor - 30
        contador = somaAcoes(contador)
      }
      console.log(`Humor: ${this.humor}`)
      if (this.humor<0){
        console.log("Demoramos "+ contador + " aÃ§Ãµes para acabar com a paciÃªncia do jogador")
    }
    }
}
  
class Fulano extends Pessoa{
constructor(atividade){
    super(atividade)
    this.humor = 100
}
}

let malhar;
